{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src", "typings"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
